# ===============================
# SGC - .env.example (DESENVOLVIMENTO)
# ===============================
# Copie para `.env` em desenvolvimento (local).

# -------- Ambiente --------
ENV=development
DEBUG=True
DJANGO_SECRET_KEY=CHANGE_ME_DEV_SECRET

# -------- Domínios/CSRF --------
ALLOWED_HOSTS=127.0.0.1,localhost
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# -------- Banco de Dados (MySQL) --------
DB_NAME=sgc_dev
DB_USER=root
DB_PASSWORD=dev_password
DB_HOST=127.0.0.1
DB_PORT=3306

# -------- Sessão --------
SESSION_COOKIE_AGE=18000
SESSION_EXPIRE_AT_BROWSER_CLOSE=False

# -------- Segurança (Dev) --------
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# -------- Integrações (opcional em dev) --------
GOOGLE_DRIVE_FOLDER_ID=
OPENAI_API_KEY=
OPENROUTER_API_KEY=

# -------- SMTP (pode usar mailhog/mailtrap) --------
EMAIL_HOST=localhost
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
