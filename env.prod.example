# ===============================
# SGC - .env.example (PRODUÇÃO)
# ===============================
# Copie para `.env` no servidor e preencha os valores reais.

# -------- Ambiente --------
ENV=production
DEBUG=False
DJANGO_SECRET_KEY=CHANGE_ME_PROD_SECRET

# -------- Domínios/CSRF --------
# IMPORTANTE: use esquema + domínio (sem barra no final)
ALLOWED_HOSTS=sgccro.dbsistemas.com.br
CSRF_TRUSTED_ORIGINS=https://sgccro.dbsistemas.com.br

# -------- Banco de Dados (MySQL) --------
DB_NAME=sgc_prod
DB_USER=sgc_user
DB_PASSWORD=CHANGE_ME_DB_PASSWORD
DB_HOST=localhost
DB_PORT=3306

# -------- Sessão --------
# 5 horas (em segundos)
SESSION_COOKIE_AGE=18000
# Não expirar ao fechar o navegador
SESSION_EXPIRE_AT_BROWSER_CLOSE=False

# -------- Segurança (HTTPS) --------
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
# Se estiver atrás de proxy que termina TLS (ex.: Cloudflare/NGINX/Apache com Passenger):
#SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# -------- Integrações --------
GOOGLE_DRIVE_FOLDER_ID=CHANGE_ME_FOLDER_ID
OPENAI_API_KEY=sk-CHANGE_ME_OPENAI
OPENROUTER_API_KEY=or-CHANGE_ME_OPENROUTER

# -------- SMTP --------
# Ajuste conforme seu provedor (ex.: smtp.seudominio.com)
EMAIL_HOST=smtp.seudominio.com
EMAIL_HOST_USER=no-reply@seudominio.com
EMAIL_HOST_PASSWORD=CHANGE_ME_SMTP_PASSWORD
